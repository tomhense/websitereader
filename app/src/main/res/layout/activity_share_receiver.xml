<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Headline -->
        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/share_receiver_headline"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <!-- URL -->
        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="12dp"
            android:text="@string/share_receiver_url_label"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- Loading Spinner (visible at start) -->
        <ProgressBar
            android:id="@+id/loadingSpinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="32dp"
            android:visibility="visible" />

        <!-- Content panel (hidden at start) -->
        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Article Info: Word/Char count and Language -->
            <TextView
                android:id="@+id/tvArticleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:text="@string/share_receiver_article_info_label" />

            <!-- Language Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/language" />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp" />

            <!-- TTS Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/share_receiver_tts_service_label" />

            <Spinner
                android:id="@+id/spinnerTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp" />

            <!-- Estimated Cost -->
            <TextView
                android:id="@+id/tvEstimatedCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="@string/share_receiver_estimated_cost_label" />

            <!-- Bottom Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Preview Icon Button -->
                <ImageButton
                    android:id="@+id/btnPreview"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share_receive_preview_article_button"
                    android:src="@drawable/baseline_article_24" />

                <!-- Generate Audio Button -->
                <Button
                    android:id="@+id/btnGenerateAudio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/share_receive_generate_audio_button" />
            </LinearLayout>

            <!-- Progress bar below the buttons -->
            <ProgressBar
                android:id="@+id/generationProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>